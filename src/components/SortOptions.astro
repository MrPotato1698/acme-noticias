---
interface Props {
  currentSort: string;
}

const { currentSort } = Astro.props;
---

<div class="mb-6">
  <h3 class="text-sm font-semibold text-dark mb-2">Ordenar por</h3>
  <div class="space-y-2">
    <div class="flex items-center">
      <input
        type="radio"
        id="sort-newest"
        name="sort"
        value="newest"
        class="w-4 h-4 text-primary focus:ring-primary"
        checked={currentSort === 'newest'}
      />
      <label for="sort-newest" class="ml-2 text-sm text-dark">
        Más recientes primero
      </label>
    </div>
    <div class="flex items-center">
      <input
        type="radio"
        id="sort-oldest"
        name="sort"
        value="oldest"
        class="w-4 h-4 text-primary focus:ring-primary"
        checked={currentSort === 'oldest'}
      />
      <label for="sort-oldest" class="ml-2 text-sm text-dark">
        Más antiguas primero
      </label>
    </div>
    <div class="flex items-center">
      <input
        type="radio"
        id="sort-relevance"
        name="sort"
        value="relevance"
        class="w-4 h-4 text-primary focus:ring-primary"
        checked={currentSort === 'relevance'}
      />
      <label for="sort-relevance" class="ml-2 text-sm text-dark">
        Relevancia
      </label>
    </div>
  </div>
</div>